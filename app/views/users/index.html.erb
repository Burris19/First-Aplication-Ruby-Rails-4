<!DOCTYPE html>
<html>
<head>
	<title>Curso Ruby in Rails</title>
</head>
<body>

	<h1>Listando usuarios</h1>

	<% flash.each do |key, value| %>
		<div>
			<%= value %>
		</div>
	<% end %>


	<table>
		<tr>
			<td>Nombre</td>
			<td>Email</td>
			<td>Editar</td>
			<td>Eliminar</td>
		</tr>


		<% @usuarios.each do |usuario| %>
			<tr>
				<td><%= link_to usuario.nombre, usuario %></td>
				<td><%= usuario.email %></td>
				<td><%= link_to "Editar", edit_user_path(usuario)%></td>
				<td><%= link_to "Elimnar", usuario, method: :delete, confirm: "Confirmar Eliminacion?" %></td>
			</tr>
		<% end %>

		<% if @usuarios.size == 0 %>
			NO SE ENCONTRARON USUARIOS :(
		<% end %>

	</table>

	<%= link_to 'Nuevo usuario', new_user_path %>
	<%= link_to 'Registrar', '/signup' %>	
</body>
</html>